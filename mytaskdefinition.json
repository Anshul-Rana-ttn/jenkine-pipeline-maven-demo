{
  "family": "mytaskdefinition",
  "networkMode": "awsvpc",
  "containerDefinitions": [{
    "name": "myappv313",
    "image": "httpd:2.4",
    "portMappings": [{
      "containerPort": 80,
      "hostPort": 80,
      "protocol": "tcp"
    }],
     "environment": [
        {
          "name": "APP_NAME",
          "value": "app-web-asset"
        },
        {
          "name": "CEPH_DATA",
          "value": "SAMPLE_CEPH"
        },
        {
          "name": "CEPH_SECRET",
          "value": "KM@&qp28"
        },
        {
          "name": "CEPH_URL",
          "value": "http://172.27.100.229:8080"
        },
        {
          "name": "CEPH_USER",
          "value": "C6-Ceph-test:C6-Ceph-test"
        },
        {
          "name": "CSV_PATH",
          "value": "/tmp/data"
        },
        {
          "name": "DATA_FEED",
          "value": "dev_pixalate_datafeed"
        },
        {
          "name": "DC",
          "value": "int1"
        },
        {
          "name": "ENV",
          "value": "int"
        },
        {
          "name": "XMS",
          "value": "2G"
        },
        {
          "name": "XMX",
          "value": "4G"
        }
      ],
    "essential": true,
    "entryPoint": [
      "sh",
      "-c"
    ],
    "command": [
      "/bin/sh -c \"echo 'hello from ecs fargate cluster' >  /usr/local/apache2/htdocs/index.html && httpd-foreground\""
    ]
  }],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}

